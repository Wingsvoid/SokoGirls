<Window x:Name="GameScreen" x:Class="Soko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Soko"
        mc:Ignorable="d"
        Title="SokoGirls" Height="768" Width="1024" WindowState="Maximized" KeyDown="GameScreen_KeyDown">
    <Canvas x:Name="scene" Margin="0,0,0,0" MinWidth="100" MinHeight="100">
        <Canvas.Background>
            <ImageBrush x:Name="bgBrush" ImageSource="tiles/floor_stop.jpg" TileMode="Tile" ViewportUnits ="Absolute" Viewport="0, 0, 128, 128"/>
        </Canvas.Background>
    </Canvas>
    
</Window>

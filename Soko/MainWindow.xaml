<Window x:Name="GameScreen" x:Class="Soko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Soko"
        mc:Ignorable="d"
        Title="SokoGirls" Height="768" Width="1024" WindowState="Maximized" KeyDown="GameScreen_KeyDown" Icon="other/labyrinth.ico">
    <Canvas x:Name="scene" Margin="0,0,0,0" MinWidth="100" MinHeight="100">
        <Canvas.Background>
            <ImageBrush x:Name="bgBrush" ImageSource="tiles/floor_stop2.png" TileMode="Tile" ViewportUnits ="Absolute" Viewport="0, 0, 128, 128"/>
        </Canvas.Background>
        <Button x:Name="rule" Content="Rules" Canvas.Left="859" Canvas.Top="665" Width="147" Height="62" Click="rule_Click" FontSize="24" Foreground="#FFBA3300" BorderBrush="#FF1F1F1F">
            <Button.Background>
                <ImageBrush ImageSource="Button.png"/>
            </Button.Background>
        </Button>
    </Canvas>

</Window>
